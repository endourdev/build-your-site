{
  "name": "build-your-site",
  "version": "0.0.1",
  "description": "An app will help you to create your website",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "icon": "icon.ico",
    "appId": "io.github.fofh",
    "productName": "BuildingSite",
    "nsis": {
      "artifactName": "BuilYourOwnSiteSetup ${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "install.ico",
      "uninstallerIcon": "uninstall.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fofhgit/build-your-site.git"
  },
  "keywords": [
    "App",
    "Site"
  ],
  "author": "Fofh_",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fofhgit/build-your-site/issues"
  },
  "homepage": "https://github.com/fofhgit/build-your-site#readme",
  "devDependencies": {
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0"
  }
}
